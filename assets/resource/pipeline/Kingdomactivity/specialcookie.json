{
    "choose_specialcookie":{
        "recognition":{
            "type":"TemplateMatch",
            "param":{
                "template" : "kingdomactivity/choosespecialcookie.png"
            }
        },
        "action":{
            "type":"Click"
        },
        "next": [
            "specialcookie_page"
        ]
    },
    "specialcookie_page":{
        "recognition":{
            "type":"OCR",
            "param":{
                "expected" : "相约之亭",
                "roi" : [14,7,198,64]
            }
        },
        "next": [
            "check_specialcookie_number",
            "huaxiaolong",
            "snowman"
        ]
    },
    "check_specialcookie_number":{
        "recognition":{
            "type":"OCR",
            "param":{
                "expected" : "0/15"
            }
        },
        "action":{
            "type":"Click"
        },
        "next": [
            "specialcookie_done"
        ]
    },
    "huaxiaolong":{
        "recognition":{
            "type":"OCR",
            "param":{
                "expected" : "花小龙饼干"
            }
        },
        "action":{
            "type":"Click"
        },
        "next": [
            "cookie_page"
        ],
        "enabled":false
    },
    "snowman":{
        "recognition":{
            "type":"OCR",
            "param":{
                "expected" : "冰锥雪怪饼干"
            }
        },
        "action":{
            "type":"Click"
        },
        "next": [
            "cookie_page"
        ],
        "enabled":true
    },
    "cookie_page":{
        "recognition":{
            "type":"OCR",
            "param":{
                "expected" : [
                    "唤醒",
                    "孵化"
                ]
            }
        },
        "action":{
            "type":"Click"
        },
        "next": [
            "cookie_next_page"
        ]
    },
    "cookie_next_page":{
        "recognition":{
            "type":"OCR",
            "param":{
                "expected":[
                    "孵化温度",
                    "起床点数"
                ]
            }
        },
        "action":{
            "type":"Swipe",
            "param":{
                "begin" : [461,287,1,1],
                "end" : [880,281,1,1]
            }
        },
        "next":[
            "wait_cookie_next"
        ],
        "pre_delay":5000
    },
    "wait_cookie_next":{
        "recognition":{
            "type":"OCR",
            "param":{
                "expected":"暂停"
            }
        },
        "next":[
            "cookie_success",
            "wait_cookie_next",
            "cookie_done"
        ],
        "pre_delay":5000
    },
    "cookie_success":{
        "recognition":{
            "type":"OCR",
            "param":{
                "expected":"本次分享"
            }
        },
        "action":{
            "type":"Click",
            "param":{
                "target" : [449,473,207,162]
            }
        },
        "next":[
            "cookie_done"
        ],
        "pre_delay":5000
    },
    "cookie_done":{
        "recognition":{
            "type":"OCR",
            "param":{
                "expected":[
                    "尝试孵化",
                    "唤醒"
                ]
            }
        },
        "next":[
            "specialcookie_done"
        ]
    },
    "specialcookie_done":{
        "action":{
            "type":"Custom",
            "param":{
                "custom_action":"DisableNode",
                "custom_action_param":{
                    "node_name":"choose_specialcookie"
                }
            }
        },
        "next":[
            "returnmainpage"
        ]
    }
}